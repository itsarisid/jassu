@model List<MVCCRUD.Models.EmpModel>

@{
    ViewBag.Title = "Read";
}

<h2 class="text-center">Get Employee Details</h2>

<div id="title">
    <h4>@Html.ActionLink("Create New Employee", "Create", null, new { @class = "btn btn-primary" })</h4>
</div>
<table class="table table-bordered">
    <tr>
        <th>
            Name
        </th>
        <th>
            Age
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit ", "Employee", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }

</table>
