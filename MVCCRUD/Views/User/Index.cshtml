@model List<MVCCRUD.Models.UserModal>

@{
    ViewBag.Title = "All User";
}

<h2 class="text-center">User List</h2>

<div id="title">
    <h4>@Html.ActionLink("Create New User", "Create", null, new { @class = "btn btn-primary" })</h4>
</div>
<table class="table table-hover table-bordered">
    <tr>
        <th>
            Name
        </th>
        <th>
            Action
        </th>
    </tr>
    @if (Model != null)
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Edit ", "User", new { id = item.Id }, null)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    }

</table>
